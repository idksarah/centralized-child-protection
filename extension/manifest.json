{
  "manifest_version": 3,
  "name": "Centralized Child Protection",
  "version": "0.0",
  "description": "Protects your children",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "./images/icon.png"
    },
    "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "activeTab", "scripting", "tabs", "clipboardRead"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "type": "module",
        "run_at": "document_idle"
      }
    ],
  "web_accessible_resources": [
    {
      "resources": ["banner.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
